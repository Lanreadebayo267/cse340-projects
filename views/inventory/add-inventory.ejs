<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
  <script>
    function validateInventoryForm() {
      const make = document.getElementById("invMake").value.trim();
      const model = document.getElementById("invModel").value.trim();
      const year = document.getElementById("invYear").value.trim();
      const price = document.getElementById("invPrice").value.trim();
      const miles = document.getElementById("invMiles").value.trim();
      const color = document.getElementById("invColor").value.trim();
      const classification = document.getElementById("classification_id").value;

      let errors = [];

      if (!make) errors.push("Make is required.");
      if (!model) errors.push("Model is required.");
      if (!year || isNaN(year)) errors.push("Valid year is required.");
      if (!price || isNaN(price)) errors.push("Valid price is required.");
      if (!miles || isNaN(miles)) errors.push("Valid miles is required.");
      if (!color) errors.push("Color is required.");
      if (!classification) errors.push("Classification is required.");

      if (errors.length > 0) {
        alert(errors.join("\\n"));
        return false;
      }
      return true;
    }
  </script>
</head>
<body>
  <%- nav %>

  <h1>Add New Vehicle</h1>

  <% if (message && message.length > 0) { %>
    <p class="flash-message"><%= message %></p>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <ul class="errors">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/inv/add-inventory" method="POST" onsubmit="return validateInventoryForm()">
    <label for="invMake">Make:</label>
    <input type="text" id="invMake" name="inv_make" required
           value="<%= stickyData.inv_make || '' %>">

    <label for="invModel">Model:</label>
    <input type="text" id="invModel" name="inv_model" required
           value="<%= stickyData.inv_model || '' %>">

    <label for="invYear">Year:</label>
    <input type="number" id="invYear" name="inv_year" required
           value="<%= stickyData.inv_year || '' %>">

    <label for="invDescription">Description:</label>
    <textarea id="invDescription" name="inv_description" required><%= stickyData.inv_description || '' %></textarea>

    <label for="invImage">Image Path:</label>
    <input type="text" id="invImage" name="inv_image" required
           value="<%= stickyData.inv_image || '' %>">

    <label for="invThumbnail">Thumbnail Path:</label>
    <input type="text" id="invThumbnail" name="inv_thumbnail" required
           value="<%= stickyData.inv_thumbnail || '' %>">

    <label for="invPrice">Price:</label>
    <input type="number" step="0.01" id="invPrice" name="inv_price" required
           value="<%= stickyData.inv_price || '' %>">

    <label for="invMiles">Miles:</label>
    <input type="number" id="invMiles" name="inv_miles" required
           value="<%= stickyData.inv_miles || '' %>">

    <label for="invColor">Color:</label>
    <input type="text" id="invColor" name="inv_color" required
           value="<%= stickyData.inv_color || '' %>">

    <label for="classification_id">Classification:</label>
    <%- classificationSelect %>

    <button type="submit">Add Vehicle</button>
  </form>
</body>
</html>
