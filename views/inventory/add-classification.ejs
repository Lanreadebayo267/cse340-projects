<%- include('../partials/header') %>

<h1>Add Classification</h1>

<% if (message) { %>
  <p class="notice"><%= message %></p>
<% } %>

<% if (errors && errors.length) { %>
  <ul style="color:red;">
    <% errors.forEach(e => { %>
      <li><%= e.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/add-classification" method="POST">
    <label>Classification Name (no spaces/special chars)</label>
    <input type="text" name="classification_name" required pattern="^[A-Za-z0-9_-]+$" value="<%= classification_name %>">
    <button type="submit">Add Classification</button>
</form>

<%- include('../partials/footer') %>